<div>
    <%= form_with model: @post do |form| %>
        <div>
            <%= form.label :body, class: "font-medium" %>
        </div>
        <div>
            <%= form.text_area :body, class: "w-full"  %>
        </div>
        <div>
            <%= form.submit "Update Post", class: "bg-blue-800 text-white text-xs px-2 py-1 rounded-lg"  %>
        </div>
    <% end %>
</div>