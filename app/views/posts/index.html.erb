<div>
  <h1 class="font-bold">Posts</h1>
  <%= button_to "New Post", new_post_path, method: :get %>
</div>
<div>
  <% @posts.each do |post| %>
    <div>
      <%= post.body %>
    </div>
    <div>
      <%= button_to "Show Post", post_path(post), method: :get %>
      <%= button_to "Update Post", edit_post_path(post), method: :get %>
      <%= button_to "Delete Post", post_path(post), method: :delete %>
    <div>
  <% end %>
</div>
